pipeline {
  agent any

  environment {
    IMAGE_NAME = "johandiaz9021/product-service:latest"
    KUBE_NAMESPACE = "product-service-stage"
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/JohanDiaz9021/ecommerce-microservice-user-service.git'
      }
    }

    stage('Build Docker Image') {
      steps {
        dir('user-service') {
          bat "docker build -t ${IMAGE_NAME} ."
          withCredentials([usernamePassword(credentialsId: 'docker-hub', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
            bat "echo %DOCKER_PASS% | docker login -u %DOCKER_USER% --password-stdin"
          }
          bat "docker push ${IMAGE_NAME}"
        }
      }
    }

    stage('Deploy to Kubernetes') {
      steps {
        dir('user-service/k8s') {
          bat "kubectl apply -f deployment-stage.yaml -n ${KUBE_NAMESPACE}"
          bat "kubectl apply -f service-stage.yaml -n ${KUBE_NAMESPACE}"
        }
      }
    }
  }
}
